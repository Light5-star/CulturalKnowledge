<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@android:color/white"
    android:padding="16dp">

    <com.google.android.material.imageview.ShapeableImageView
        android:id="@+id/ivPage"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginBottom="16dp"
        android:scaleType="centerCrop"
        app:layout_constraintDimensionRatio="4:3"
        app:layout_constraintTop_toTopOf="parent"
        app:shapeAppearanceOverlay="@style/RoundedImageView"
        tools:src="@tools:sample/backgrounds/scenic" />

    <TextView
        android:id="@+id/tvContent"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:letterSpacing="0.3"
        android:lineSpacingMultiplier="1.2"
        android:textSize="20sp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/ivPage"
        tools:text="ã€‚"/>

    <com.xuhh.culturalknowledge.ui.view.UnicodeTextView
        android:id="@+id/btnSound"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:background="@drawable/circle_button_background"
        android:gravity="center"
        android:text="@string/sound"
        android:textColor="#7e6fff"
        android:textSize="20sp"
        android:layout_margin="20dp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPage"
        app:layout_constraintStart_toStartOf="parent"/>

    <com.xuhh.culturalknowledge.ui.view.UnicodeTextView
        android:id="@+id/btnReplay"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_marginRight="20dp"
        android:background="@drawable/circle_button_background"
        android:gravity="center"
        android:text="@string/replay"
        android:textColor="#7e6fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/btnPause"
        app:layout_constraintEnd_toStartOf="@+id/btnPause"/>

    <com.xuhh.culturalknowledge.ui.view.UnicodeTextView
        android:id="@+id/btnPause"
        android:layout_width="48dp"
        android:layout_height="48dp"
        android:layout_margin="20dp"
        android:background="@drawable/circle_button_background"
        android:gravity="center"
        android:text="@string/pause"
        android:textColor="#7e6fff"
        android:textSize="20sp"
        app:layout_constraintBottom_toBottomOf="@+id/ivPage"
        app:layout_constraintEnd_toEndOf="parent"/>

</androidx.constraintlayout.widget.ConstraintLayout>